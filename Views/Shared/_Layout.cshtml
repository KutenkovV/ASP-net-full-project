<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
</head>
<body style="background: rgba(184, 209, 255, 1.0); 
       background: -webkit-linear-gradient(right, rgba(184, 209, 255, 1.0), rgba(249, 143, 125, 1.0)); 
       background: -moz-linear-gradient(right, rgba(184, 209, 255, 1.0), rgba(249, 143, 125, 1.0)); 
       background: linear-gradient(to left, rgba(184, 209, 255, 1.0), rgba(249, 143, 125, 1.0));">

    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <div class="d-flex justify-content-center collapse navbar-collapse" id="navbarNav">

                <i class="fa fa-heart" aria-hidden="true"></i>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Home")">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Products")">Продукты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Warehouses")">Склады</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Retail_outlets")">Торговые точки</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Entrances")">Первое поступление</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Entrance_2")">Второе поступление</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="text-danger nav-link active" href="@Url.Action("Index", "FirstRequest")">Первый запрос</a>
                    </li>
                    <li class="nav-item">
                        <a class="text-danger nav-link active" href="@Url.Action("Index", "SecondRequest")">Второй запрос</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Vladislav Kutenkov</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
