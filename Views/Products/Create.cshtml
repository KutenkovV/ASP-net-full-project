@model Accounting_of_Goods_ver_2.Models.Product

@{
    ViewBag.Title = "Создать";
}

<h2>Создать</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken();
    
    <div class="form-horizontal">
        <h4>Продукты</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "alert alert-success" })
        <div class="form-group">
            @Html.LabelFor(model => model.name_of_the_company, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.name_of_the_company, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name_of_the_company, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Units_of_measurement, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Units_of_measurement, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Units_of_measurement, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cost_of_change, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost_of_change, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cost_of_change, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div>
    <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Вернуться к таблице</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
